<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <EditText android:id="@+id/activity_student_form_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="8dp"
              android:inputType="textCapWords"
              android:hint="@string/nome" android:importantForAutofill="no"/>

    <EditText android:id="@+id/activity_student_form_email"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="8dp"
              android:inputType="textEmailAddress"
              android:hint="@string/e_mail" tools:ignore="TextFields" android:importantForAutofill="no"/>

    <EditText android:id="@+id/activity_student_form_tel"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="8dp"
              android:inputType="phone"
              android:hint="@string/telefone" android:importantForAutofill="no"/>
</LinearLayout>
