              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginBottom="4dp"
              android:textSize="18sp"
              tools:text="+55 (42) 99874-0954" android:layout_marginStart="8dp"/>

</LinearLayout>